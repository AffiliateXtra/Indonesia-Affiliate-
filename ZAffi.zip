        /* ========================================================= */
        /* === MEDIA QUERY UNTUK LAYAR TABLET & PC (RESPONSIVITAS) === */
        /* ========================================================= */

        @media (min-width: 768px) {

            body {
                background-color: #f7f7f7;
            }

            .page-container {
                /* Max-width diperluas hingga 1000px untuk tampilan desktop yang lebih luas */
                max-width: 1000px;
                border-radius: 1.5rem;
                margin-top: 2rem;
                margin-bottom: 2rem;
                min-height: auto;
            }

            /* --- LANDING PAGE --- */
            #landing-page {
                /* Di PC, tinggi mengikuti konten, dan pusatkan di page-container */
                min-height: auto;
                padding-bottom: 2rem;
                justify-content: center;
            }

            .content-box {
                margin-left: var(--spacing-default);
                margin-right: var(--spacing-default);
                padding: 1.5rem 1.5rem;
                /* Di PC, tumpang tindihnya tidak terlalu penting, tapi margin bawah di PC harus ada */
                margin-bottom: 0; 
            }

            .main-heading {
                font-size: 1.8rem;
            }

            .sub-text-landing {
                font-size: 1.1rem;
            }

            /* --- PRODUCT LIST PAGE --- */

            .header {
                padding: 1rem var(--spacing-default) 0.8rem var(--spacing-default);
            }

            .header h1 {
                font-size: 1.8rem;
            }

            .header p {
                font-size: 1.1rem;
                margin-bottom: 1rem;
            }

            /* Wrapper List */
            .product-list-wrapper {
                padding-top: 2rem;
                padding-left: var(--spacing-default);
                padding-right: var(--spacing-default);
            }

            /* Produk menggunakan GRID */
            .product-list {
                display: grid;
                /* Default 2 kolom untuk tablet */
                grid-template-columns: repeat(2, 1fr);
                gap: var(--spacing-card-gap);
            }

            .product-item {
                margin-bottom: 0;
                width: auto;
            }

            .product-link {
                padding: 0.75rem 1.2rem 0.75rem 0.75rem;
                /* Gunakan align-items: flex-start agar konten tetap rapi di grid */
                align-items: flex-start; 
            }

            .product-image-wrapper {
                width: 5rem;
                height: 5rem;
            }

            .product-text h3 {
                font-size: 1rem;
            }

            .product-text p {
                font-size: 1rem;
            }
            
            /* MEDIA QUERY TAMBAHAN untuk LAYAR SANGAT LEBAR/PC */
            @media (min-width: 1000px) {
                .product-list {
                    /* Mengubah menjadi 3 kolom untuk layar desktop */
                    grid-template-columns: repeat(3, 1fr); 
                }
            }

        }
    </style>
</head>
