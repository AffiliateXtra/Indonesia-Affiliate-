        }

        .product-text h3 {
            margin: 0;
            font-size: 0.9rem;
            color: var(--text-dark);
            font-weight: 700;
        }

        .product-text p {
            margin: 0.225rem 0 0 0;
            font-size: 0.9rem;
            color: var(--shopee-orange);
        }

        .next-icon {
            width: 2rem;
            height: 2rem;
            margin-left: 0.5rem;
            flex-shrink: 0;
