        const landingPage = document.getElementById('landing-page');
        const shopeeLinkPage = document.getElementById('shopee-link-page');
        const btnToProductList = document.getElementById('btn-to-product-list');
        const btnBackToLanding = document.getElementById('btn-back-to-landing');
        const productList = document.getElementById('product-list');
        const searchInput = document.getElementById('search-input');
        const headerList = document.getElementById('header-list');
        const searchStickyBar = document.getElementById('search-sticky-bar');


        /* === FUNGSI UTAMA === */

        // 1. Fungsi untuk merender daftar produk
        function renderProducts(data) {
            productList.innerHTML = data.map(product => `
                <li class="product-item" data-product-name="${product.name.toLowerCase()}" data-product-num="${product.num}">
                    <a
                        href="${product.link}"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="product-link"
                    >
                        <div class="product-icon-text-wrapper">

                            <div class="product-image-wrapper">
                                <span class="product-number-overlay">${product.num}</span>
                                <img
                                    src="${product.img}"
                                    alt="${product.name}"
                                    class="product-image"
                                    loading="lazy"
                                >
                            </div>
                            <div class="product-info-wrapper">
                                <div class="product-text">
                                    <h3>${product.name}</h3>
                                    <p>${product.sub}</p>
                                </div>
                            </div>
                        </div>
                        <span class="next-icon"></span>
                    </a>
                </li>
            `).join('');
        }

        // 2. Fungsi Filter Search Bar
        function filterProducts() {
            const query = searchInput.value.toLowerCase().trim();
            const items = productList.children;

            for (let i = 0; i < items.length; i++) {
                const item = items[i];
                const name = item.getAttribute('data-product-name');
                const num = item.getAttribute('data-product-num');

                let isMatch = false;

                // --- LOGIKA PENCARIAN KETAT UNTUK NOMOR ---
                if (query === '') {
                    // Jika query kosong, tampilkan semua
                    isMatch = true;
                } else if (!isNaN(query) && query !== '') {
                    // Jika query adalah angka, cek KESAMAAN KETAT
                    isMatch = (num === query);
                } else {
                    // Jika query adalah teks (bukan angka), gunakan pencarian 'includes'
                    isMatch = name.includes(query);
                }
                // --- AKHIR LOGIKA PENCARIAN ---

                if (isMatch) {
                    item.classList.remove('hidden');
                } else {
                    item.classList.add('hidden');
                }
            }
        }

        // 3. Fungsi Animasi Header saat Scroll (Menyusut & Posisi Search Bar)
        let isScrolling = false;
        function handleScroll() {
            if (!isScrolling) {
                window.requestAnimationFrame(() => {
                    if (shopeeLinkPage.style.display !== 'none') {

                        // A. Animasi Header Menyusut
                        if (window.scrollY > 5) {
                            headerList.classList.add('scrolled');
                        } else {
                            headerList.classList.remove('scrolled');
                        }

                        // B. Tentukan Posisi Sticky Search Bar secara dinamis
                        const headerHeight = headerList.getBoundingClientRect().height;
                        searchStickyBar.style.top = `${headerHeight}px`;
                    }
                    isScrolling = false;
                });
                isScrolling = true;
            }
        }

        // 4. Transisi Halaman: Landing Page -> Product List
        function goToProductList() {
            landingPage.style.display = 'none';
            shopeeLinkPage.style.display = 'block';
            window.scrollTo(0, 0);
            searchInput.value = '';
            filterProducts();
            // Setelah pindah, setel ulang posisi sticky
            searchStickyBar.style.top = `${headerList.offsetHeight}px`;
        }

        // 5. Transisi Halaman: Product List -> Landing Page
        function goToLandingPage() {
            shopeeLinkPage.style.display = 'none';
            landingPage.style.display = 'block';
            window.scrollTo(0, 0);
        }

        /* === EVENT LISTENERS === */

        btnToProductList.addEventListener('click', goToProductList);
        btnBackToLanding.addEventListener('click', goToLandingPage);
        searchInput.addEventListener('input', filterProducts);
        window.addEventListener('scroll', handleScroll);

