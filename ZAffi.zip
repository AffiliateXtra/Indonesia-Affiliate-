            background-color: var(--bg-bottom-color);
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
        }

        .top-image-container {
            background-color: #7E1800;
            overflow: hidden;
            line-height: 0;
            flex-shrink: 0;
            /* TAMBAHAN: Ruang di bawah gambar */
            padding-bottom: 0.5rem; 
        }

        .main-promo-image {
            width: 100%;
            height: auto;
            display: block;
        }

        .content-box {
            background-color: white;
            padding: 1rem 1rem;
            text-align: center;
            border-top-left-radius: var(--spacing-default);
            border-top-right-radius: var(--spacing-default);
            border-bottom-left-radius: var(--spacing-default);
            border-bottom-right-radius: var(--spacing-default);

            /* PERBAIKAN: Mengurangi margin negatif agar kotak bergeser ke bawah */
            margin-top: -0.5rem; 
            position: relative;
            z-index: 10;

            /* PERBAIKAN: Menambah margin bawah sedikit */
            margin-bottom: 1.5rem; 
            margin-left: 1rem;
            margin-right: 1rem;

            flex-grow: 0; 
            flex-shrink: 0;
            
            display: block; 
        }

        .main-heading {
            font-size: 1.5rem;
            font-weight: 700;
            line-height: 1.3;
            color: var(--text-dark);
            margin-bottom: 0.9375rem;
        }

        .sub-text-landing {
            font-size: .9rem;
            color: var(--text-gray);
            line-height: 1.5;
            margin-bottom: 2.1875rem;
        }

        .shopee-button {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 100%;
            padding: 0.9375rem 0;
            background-color: var(--shopee-red);
            color: white;
            text-decoration: none;
            border-radius: 0.8rem;
            font-size: 1.1rem;
            font-weight: 600;
            box-shadow: 0 4px 8px rgba(255, 77, 77, 0.4);
            transition: background-color 0.2s;
            cursor: pointer;
            flex-shrink: 0;
        }

        .shopee-button:active {
            transform: scale(0.99);
        }

        .shopee-icon {
            width: 1.75rem;
            height: 1.75rem;
            margin-right: 0.5rem;
            object-fit: contain;
            content: url('https://ik.imagekit.io/2fgtwvaxrw/20251106_022629.png?updatedAt=1762372263324');
        }

        /* ========================================================= */
        /* === CSS Halaman Link Pembelian (PRODUCT LIST PAGE) === */
        /* ========================================================= */

        /* Header (Sticky dan Animasi Menyusut) */
        .header {
            position: sticky;
            top: 0;
            z-index: 40;
            background-image: linear-gradient(to right, var(--shopee-red), var(--shopee-orange));
            color: white;
            padding: 0.75rem var(--spacing-default) 0.5rem var(--spacing-default);
            transition: all 1.3s ease-in-out;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }

        .header-top-row {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding-bottom: 0.5rem;
        }

        .shopee-logo-header {
            width: 2.70rem;
            height: 2.1rem;
            margin-top: -0.90rem;
            object-fit: contain;
            content: url('https://ik.imagekit.io/2fgtwvaxrw/20251106_022629.png?updatedAt=1762372263324');
        }

        .header-text-area {
            padding-left: 0;
            margin-top: -0.5rem;
            transition: all 0.3s ease-in-out;
        }

        .header h1 {
            font-size: 1.4rem;
            margin: 0;
            font-weight: 600;
            text-align: left;
        }

        .back-button {
            padding: 0.3125rem;
            cursor: pointer;
        }

        .back-icon {
            width: 1.90rem;
            height: 1.90rem;
            margin-right: 0px;
            content: url('https://ik.imagekit.io/2fgtwvaxrw/20251124_171055.png');
        }

        .header.scrolled {
            padding-top: 0.5rem;
            padding-bottom: 0.5rem;
        }

        .header p {
            font-size: 1.0rem;
            margin: 0.35rem 0 0.6rem 0;
            font-weight: 400;
            opacity: 0.87;
            transition: opacity 0.3s ease-in-out, height 0.3s ease-in-out, margin 0.3s ease-in-out;
            overflow: hidden;
        }

        .header.scrolled .header-text-area {
            opacity: 0;
            height: 0;
            margin-top: 0.10rem;
            margin-bottom: -1rem;
        }

        .header.scrolled .header-top-row {
            padding-bottom: 0;
        }

        /* === SEARCH BAR - STICKY KEDUA (WADAH ABU-ABU) === */
        .search-bar-container {
            position: sticky;
            z-index: 35;
            background-color: #F0F0F0;
            box-shadow: none;
            padding: var(--spacing-default);
            margin: 0;
            width: 100%;
            box-sizing: border-box;
            border-top-left-radius: 0;
            border-top-right-radius: 0;
        }

        .search-bar-wrapper {
            background-color: white;
            padding: 0.5rem 1.0rem;
            border-radius: 0.5rem;
            display: flex;
            align-items: center;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
